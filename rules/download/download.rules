# -*- mode: Snakemake -*-
#
# Rules to download SRA data

rule download_paired:
	output:
		r1 = lambda wildcards: Samples[wildcards.sample]['1'],
		r2 = lambda wildcards: Samples[wildcards.sample]['2']
	params:
		accession = '{sample}',
		outdir = str(DOWNLOAD_FP)
	shell:
		"""
		grabseqs sra -r 3 -o {params.outdir} {params.sample}
		"""

rule download_unpaired:
	output:
		lambda wildcards: Samples[wildcards.sample]['1']
	params:
		accession = '{sample}',
		outdir = str(DOWNLOAD_FP)		
	shell:
		"""
		grabseqs sra -r 3 -o {params.outdir} {params.sample}
		"""
