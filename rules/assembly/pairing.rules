rule pair_reads:
    """Pairs reads with pear."""
    input:
        r1 = lambda wc: Samples[wc.sample]['R1'],
        r2 = lambda wc: Samples[wc.sample]['R2']
    output:
        str(ASSEMBLY_FP/'paired'/'{sample}.assembled.fastq')
    params:
        out = str(ASSEMBLY_FP/'paired'/'{sample}')
    shell:
        "pear -j {Cfg[all][subcores]} -f {input.r1} -r {input.r2} -o {params.out}"

rule _pair_all:
    input:
        expand(str(ASSEMBLY_FP/'paired'/'{sample}.assembled.fastq'),
               sample=Samples.keys())
